<div class="auth-page login">
  <div class="auth-form-container login">
    <h2>Iniciar Sesión</h2>
    <form action="/api/sessions/login" method="POST">
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" class="form-control" required placeholder="correo@ejemplo.com" />
      </div>
      <div class="form-group">
        <label for="password">Contraseña</label>
        <input type="password" id="password" name="password" class="form-control" required placeholder="Tu contraseña" />
      </div>
      <button type="submit">Iniciar Sesión</button>
    </form>
    <a class="auth-link" href="/register">¿No tienes cuenta? Regístrate</a>
  </div>
</div>

